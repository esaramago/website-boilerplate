{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
 		  "@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@js/*": ["./src/js/*"],
      "@css/*": ["./src/css/*"],
      "@img/*": ["./src/img/*"],
		}
  },
}